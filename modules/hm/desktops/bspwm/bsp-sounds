#!/usr/bin/env bash

OUT="${1:-$HOME/.config/bspwm/bsp-sounds-toggle}"
PROC="bsp-de-sounds"
PID=$(pgrep -n "bsp-de-sounds")

if [ -z "$PID" ]; then
   notify-send "Desktop Sound Effects" "On"
   bsp-de-sounds
   {
       echo "#!/bin/sh"
       echo "# Autogenerated bspwm config snapshot"
       echo "bsp-de-sounds"

   } > "$OUT"
   chmod +x "$OUT"
else
   pkill -f "bsp-de-sounds"
   notify-send "Desktop Sound Effects" "Off"
   {
       echo "#!/bin/sh"
       echo "# Autogenerated bspwm config snapshot"
       echo ""

   } > "$OUT"
   chmod +x "$OUT"
fi

