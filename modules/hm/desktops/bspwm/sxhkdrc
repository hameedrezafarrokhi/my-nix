# Unhide All Windows on Focused Desktop
super + shift + alt + d ; {a}
    bash -c 'for n in $(bspc query -N -n .hidden.local); do bspc node "$n" -g hidden=off; done'

# Unhide All Manually Windows on Focused Desktop
super + shift + alt + d ; {d}
    bsp-hide all

# Hide Current Focused Window
super + d
    bsp-hide hide

# Unhide Oldest Hidden Window
super + alt + d
    bsp-hide oldest

# Unhide Newest Hidden Window
super + shift + d
    bsp-hide newest

# Unhide Rofi Menu
super + alt + space
    bsp-hidden-menu

# Show/Hide Conky
super + shift + alt + j
    bsp-conky

# Clear Notifications
super + n
    dunstctl close-all

# Show Notifications one by one
super + shift + n
    dunstctl history-pop

# Show Notifications History
super + shift + alt + n
    poly-notif

# Toggle Do Not Disturb
super + ctrl + shift + n
    dunstctl set-paused toggle && pkill -USR1 -x poly-dnd

# Clear Notifications History
super + ctrl + shift + alt + n
    dunstctl history-clear && pkill -USR1 -x poly-dnd

# Toggle Dunst (Notification) Sounds
super + alt + n
    dunst-sound-toggle

# Swallow Focused Windows Terminal Parent
super + slash
    xdo id | pidswallow -gt

# Swallow Focused Windows Terminal Parent with Click
super + alt + slash
    xwininfo | awk '/Window id:/{print $4}' | pidswallow -gt

# Manual Layout Order Save (Per Workspace)
super + o
    bsp-manual-order-save; notify-send -e -u low -t 2000 "Layout Order Saved"

# Manual Layout Order load (Per Workspace)
super + shift + o
    bsp-manual-order-load; notify-send -e -u low -t 2000 "Layout Order Restored"

# Manual Layout Order Remove (Per Workspace)
super + alt + shift + o
    bsp-manual-order-remove; notify-send -e -u low -t 2000 "Layout Order Removed"

# Live Wallpaper
super + comma ; {space}
    live-bg

# Live Wallpaper Auto Pause
super + comma ; {Return}
    live-bg-pause-script

# Live Wallpaper Menu
super + ctrl + shift + comma
    paperview-rofi

# Live Wallpaper Manual
super + comma ; {m}
    live-bg-manual

# Live Wallpaper Cycle Next
super + shift + comma
    live-bg-cycle +

# Live Wallpaper Cycle Prev
super + shift + alt + comma
    live-bg-cycle -

# Live Wallpaper Speed Increase
super + ctrl + comma
    live-bg-speed +

# Live Wallpaper Speed Decrease
super + ctrl + alt + comma
    live-bg-speed -

# Live Wallpaper Pause
super + alt + comma
    live-bg-pause

# Live Wallpaper Manual Speed
super + shift + ctrl + alt + comma
    live-bg-speed-manual

# BSPWM Manual Config Save
super + alt + r
    bsp-conf; bsp-conf-color; notify-send -e -u low -t 2000 "Config Saved"

# BSPWM Manual Config Load
super + ctrl + shift + r
    $HOME/.bsp_conf; $HOME/.bsp_conf_color; notify-send -e -u low -t 2000 "Config Loaded"

# BSPWM Window Rule Apply
super + shift + t
    bsp-window-rules-add; notify-send -e -u low -t 2000 "Window Rules Applied"

# BSPWM Window Rule Remove
super + alt + shift + t
    bsp-window-rules-remove; notify-send -e -u low -t 2000 "Window Rules Removed"

# Icon Bar toggle
alt + shift + i
    bsp-bspi-toggle

# Group Delete Cachce
super + ctrl + c
    bspc query -N -n focused >> ~/.cache/bsp-delete; notify-send -e -u low -t 2000 "Window Added to Group Delete Cache"

# Group Delete
super + ctrl + shift + c
    bsp-group-delete

# Group Delete Reset
super + ctrl + shift + alt + c
    rm -f "$HOME/.cache/bsp-delete"; notify-send -e -u low -t 2000 "Group Delete Cache Removed"

# Group Delete Cachce (Mouse)
super + ctrl + button1
    bspc query -N -n focused >> ~/.cache/bsp-delete; notify-send -e -u low -t 2000 "Window Added to Group Delete Cache"

# Group Delete (Mouse)
super + ctrl + shift + button1
    bsp-group-delete

# Group Delete Cache Rofi Menu
super + alt + c
    bsp-rofi-group-delete-cache

# Kitty Picker
super + p ; {t,e,v,s,d,r,p,i,b}
    {tkcs,ekcs,vkcs,mkcs,fkcs,akcs,pkcs,pkcr,bkcs}

# Hide Kitty Picker
super + i
    xdotool search --classname picker > /dev/null && bspc node $(xdotool search --classname picker) --flag hidden=on

# Dekstop Sounds Toggle
super + ctrl + v
    bsp-sounds-toggle
