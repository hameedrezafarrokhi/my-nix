# Launch Rofi Application Menu
super + space
   	rofi -show drun -modi drun -line-padding 4 -hide-scrollbar -show-icons -theme /home/hrf/nixos/modules/hm/desktops/awesome/awesome/rofi/config.rasi

# Set Window State: Floating Mode
super + f
	bspc node -t ~floating

# Set Window State: Fullscreen Mode
super + Return
	bspc node -t fullscreen

# Set Window State: Fullscreen Mode
super + shift + Return
	bspc node -t ~tiled

# Reload sxhkd (Hotkey Daemon)
super + Escape
	pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'

# Reload bspwm (Window Manager)
alt + shift + r
	bspc wm -r; notify-send 'bspwm' 'Restarted'

# Quit bspwm (Exit Window Manager)
alt + shift + e
	bspc quit

# Close Focused Window
super + c
	bspc node -c

# Rotate Window 90° Clockwise
alt + shift + i
    bspc node -R 90

# Rotate Window 90° Counterclockwise
alt + shift + u
    bspc node -R -90

# Change Focus to Left Window
super + Left
	bspc node -f west

# Change Focus to Window Below
super + Down
	bspc node -f south

# Change Focus to Window Above
super + Up
	bspc node -f north

# Change Focus to Right Window
super + Right
	bspc node -f east

# Swap Focused Window with Left Window
super + shift + Left
	bspc node -s west

# Swap Focused Window with Window Below
super + shift + Down
	bspc node -s south

# Swap Focused Window with Window Above
super + shift + Up
	bspc node -s north

# Swap Focused Window with Right Window
super + shift + Right
	bspc node -s east

# Switch to Workspace 1-12
super + {1-9,0}
	bspc desktop --focus ^{1-9,10}

# Move Focused Window to Workspace 1-10
super + shift + {1-9,0}
	bspc node --to-desktop ^{1-9,10}

# Expand window width both sides
super + ctrl + Right
	bspc node -z right 40 0; bspc node -z left 40 0

# Shrink window width both sides
super + ctrl + Left
	bspc node -z right -40 0; bspc node -z left -40 0

# Resize Window: Shrink Down
super + ctrl + Down
	bspc node -z top 0 40; bspc node -z bottom 40 0

# Resize Window: Shrink Up
super + ctrl + Up
	bspc node -z top 0 -40; bspc node -z bottom -40 0

# Increase Volume
XF86AudioRaiseVolume
      wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+

# Decrease Volume
XF86AudioLowerVolume
      wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-

# Increase Volume (notify)
super + Insert
      bsp-volume up

# Decrease Volume (notify)
super + Delete
	bsp-volume down

# Mute Volume (notify)
super + Home
	bsp-volume mute

# Increase Screen Brightness
XF86MonBrightnessUp
	xbacklight +10

# Decrease Screen Brightness
XF86MonBrightnessDown
	xbacklight -10

# Take a Screenshot (Region Select)
super + Print
	flameshot gui --path ~/Pictures/Screenshots/

# Take a Fullscreen Screenshot
Print
	flameshot full --path ~/Pictures/Screenshots/

# Resize All Windows Equally
super + equal
	bspc query -N -d | xargs -I % bspc node % -B; notify-send "Even Layout"

# Master Stack Layout
super + t
      bsp-layout set tall; notify-send "Master-Stack Layout"

# Reverse Master Stack
super + alt + t
      bsp-layout set rtall; notify-send "Master-Stack Layout (Reverse)"

# Wide Layout
super + w
      bsp-layout set wide; notify-send "Master-Stack Layout (Horizontal)"

# Reverse Wide
super + alt + w
      bsp-layout set rwide; notify-send "Master-Stack Layout (Reverse Horizontal)"

# Monocle Layout
super + m
      bsp-layout set monocle; notify-send "Monocle Layout"

# Tiled Layout
super + BackSpace
      bsp-layout set tiled; notify-send "Tiled Layout"

# Grid Layout
super + g
      bsp-layout set grid; notify-send "Grid Layout"

# Reverse Grid
super + alt + g
      bsp-layout set rgrid; notify-send "Grid Layout (Reverse)"

# Even Layout
super + e
      bsp-layout set even; notify-send "Even Layout"

# Keyboard layout change
alt + Caps_Lock
      setxkbmap -layout us,ir -option "grp:alt_caps_toggle"; notify-send "$(bsp-xkb-layout)"

# Reset Plank
alt + shift + p
      pkill plank && plank; notify-send 'Plank Reloaded'

# Keybind Help
super + h
      bsp-help


