# Color Picker
super + y
    sh -c 'color=$(xcolor); printf "%s" "$color" | xclip -selection clipboard; notify-send "Color" "$color" -h string:bgcolor:"$color" -h string:fgcolor:"#fff"'

# Circle Zoom (sxcs)
super + u
    sxcs --mag-filters "circle"

# Full Zoom (xmagnify)
super + alt + u
    magnify -wexpr 1920 / 4 -hexpr 1080 / 4 -m4 -r30

# Full Zoom (xzoom)
super + shift + u
    xzoom -mag 2

# Creat Tab on Focused
super + k
    tabc create $(bspc query -N -n focused)

# Join Focused Window to the Tab
super + shift + k ; {Up,Down,Left,Right}
    tabc attach $(bspc query -N -n focused) $(bspc query -N -n {north,south,west,east})

# Remove Focused Window from Tab
super + alt + k
    tabc detach $(bspc query -N -n focused)

# Toggle Autosub For Focused Tabbed Window
super + alt + shift + k
    tabc autoattach $(bspc query -N -n)

# Unhide Windows on Focused Desktop
super + shift + alt + d
    bash -c 'for n in $(bspc query -N -n .hidden.local); do bspc node "$n" -g hidden=off; done'

# Hide Current Focused Window
super + d
    bspc node -g hidden=on

# Unhide First Hidden Window to Last
super + alt + d
    bash -c 'n=$(bspc query -N -n .hidden.local | tail -n 1); [ -n "$n" ] && bspc node "$n" -g hidden=off'

# Unhide Last Hidden Window to First
super + shift + d
    bsp-unhide-last-hidden

# Show/Hide Conky
super + shift + alt + h
    bsp-conky

# Clear Notifications
super + n
    dunstctl close-all

# Show Notifications one by one
super + shift + n
    dunstctl history-pop

# Show Notifications History
super + shift + alt + n
    poly-notif

# Toggle Do Not Disturb
super + ctrl + shift + n
    dunstctl set-paused toggle

# Clear Notifications History
super + ctrl + shift + alt + n
    dunstctl history-clear

# Swallow Focused Windows Terminal Parent
super + slash
    xdo id | pidswallow -gt

# Swallow Focused Windows Terminal Parent with Click
super + alt + slash
    xwininfo | awk '/Window id:/{print $4}' | pidswallow -gt

