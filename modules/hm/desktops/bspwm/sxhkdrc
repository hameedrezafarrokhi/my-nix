# Spawn Preselection Point Up
super + alt + Up
    bspc node --presel-dir \~north

# Spawn Preselection Point Down
super + alt + Down
    bspc node --presel-dir \~south

# Spawn Preselection Point Right
super + alt + Right
    bspc node --presel-dir \~east

# Spawn Preselection Point Left
super + alt + Left
    bspc node --presel-dir \~west

# Remove All Preselections
super + alt + Escape
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# Move Focused Window to Preselection
super + alt + Return
    bspc node -n last.!automatic

# Spawn Empty Point Up
super + alt + shift + Up
    bspc node --presel-dir \~north -i

