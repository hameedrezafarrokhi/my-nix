# Launch Rofi Application Menu
super + space
   	rofi -show drun -modi drun -line-padding 4 -hide-scrollbar -show-icons -theme $HOME/.config/rofi/themes/main.rasi

# Set Window State: Floating Mode
super + shift + f
	bspc node -t ~floating

# Set Window State: Fullscreen Mode
super + Return
	bsp-full-screen

# Cycle to next window (like next tab)
alt + Tab
      bspc node -f next.local.window

# Cycle to previous window (like previous tab)
alt + shift + Tab
      bspc node -f prev.local.window

# Shift to next window
super + Tab
      bspc node -s next.local.window

# Shift to previous window
super + shift + Tab
      bspc node -s prev.local.window

# Skippy-xd Expo
super + ctrl + Tab
      skippy-xd --expose

# Skippy-xd Pager
super + ctrl + shift + Tab
      skippy-xd --paging

# Skippy toggle
super + shift + ctrl + alt + Tab
      notify-send -e -u low -t 2000 "Skippy"; bsp-skippy

# Reload sxhkd (Hotkey Daemon)
super + Escape
	pkill -USR1 -x sxhkd; notify-send -e -u low -t 2000 'sxhkd' 'Reloaded config'

# Reload bspwm (Window Manager)
alt + shift + r
	bspc wm -r; notify-send -e -u critical -t 5000 'bspwm' 'Restarted'

# Quit bspwm (Exit Window Manager)
alt + shift + e
	bspc quit

# Close Focused Window
super + c
	bspc node -c

# Change Focus to Left Window
super + Left
	bspc node -f west

# Change Focus to Window Below
super + Down
	bspc node -f south

# Change Focus to Window Above
super + Up
	bspc node -f north

# Change Focus to Right Window
super + Right
	bspc node -f east

# Swap Focused Window with Left Window
super + shift + Left
	bspc node -s west

# Swap Focused Window with Window Below
super + shift + Down
	bspc node -s south

# Swap Focused Window with Window Above
super + shift + Up
	bspc node -s north

# Swap Focused Window with Right Window
super + shift + Right
	bspc node -s east

# Manual Window Swap
super + shift + q
      bsp-manual-window-swap

# Manual Window Swap (Mouse)
super + shift + button1
      bsp-manual-window-swap

# Manual Window Send
super + alt + q
      bsp-manual-window-send

# Manual Window Send (Mouse)
super + shift + button3
      bsp-manual-window-send

# Switch to Workspace 1-12
super + {1-9,0}
	bspc desktop --focus ^{1-9,10}

# Switch to Next Free Workspace
super + {backslash}
	bspc desktop --focus 'next.!occupied'

# Switch Previous Workspace
super + minus
	bspc desktop -f last

# Move Focused Window to Workspace 1-10
super + shift + {1-9,0}
	bspc node --to-desktop ^{1-9,10}

# Move Focused Window to Next Free Workspace
super + shift + {backslash}
	bspc node --to-desktop 'next.!occupied'

# Move Focused Window to Workspace 1-10 AND Follow
super + shift + ctrl + {1-9,0}
      bsp-send-follow {1-9,10}

# Move Focused Window to Next Free Workspace AND Follow
super + shift + ctrl + {backslash}
      bsp-send-follow 'next.!occupied'

# Move Focused Desktop to Desktop 1-10
super + shift + alt + {1-9,0}
	bspc node @/ -d ^{1-9,10}

# Move Focused Desktop to Next Free Workspace
super + shift + alt + {backslash}
	bspc node @/ -d 'next.!occupied'

# Move Focused Desktop to Desktop 1-10 AND Follow
super + shift + ctrl + alt + {1-9,0}
      bspc node @/ -d ^{1-9,10} --follow

# Move Focused Desktop to Next Free Workspace AND Follow
super + shift + ctrl + alt + {backslash}
      bspc node @/ -d 'next.!occupied' --follow

# Swap Focused Desktop with 1-10
super + alt + e; {1-9,0}
      bspc desktop focused --swap ^{1-9,10}

# Swap Focused Desktop Windows with 1-10
super + shift + e; {1-9,0}
      bsp-desktop-switch ^{1-9,10}

# Swap Focused Desktop Windows with 1-10 AND Follow
super + alt + shift + e; {1-9,0}
      bsp-desktop-switch-follow ^{1-9,10}

# Send Focused Desktop to Next or Previous Monitor
super + alt + shift + ctrl + period
	bspc desktop focused -m next --follow

# Send Focused Window to Next or Previous Monitor
super + alt + shift + period
	bspc node focused -m next --follow

# Expand window width right
super + ctrl + Right
	bspc node -z right 10 0

# Expand window width left
super + ctrl + Left
	bspc node -z left -10 0

# Shrink window width right
super + ctrl + alt + Right
	bspc node -z left 10 0

# Shrink window width left
super + ctrl + alt + Left
	bspc node -z right -10 0

# Expand window height up
super + ctrl + Up
	bspc node -z top 0 -10

# Expand window height down
super + ctrl + Down
	bspc node -z bottom 0 10

# Shrink window height up
super + ctrl + alt + Up
	bspc node -z bottom 0 -10

# Shrink window height down
super + ctrl + alt + Down
	bspc node -z top 0 10

# Move Window Border to Right on all sides
super + ctrl + shift + Right
	bspc node -z right 10 0; bspc node -z left 10 0

# Move Window Border to Left on all sides
super + ctrl + shift + Left
	bspc node -z right -10 0; bspc node -z left -10 0

# Move Window Border Down on all sides
super + ctrl + shift + Down
	bspc node -z top 0 10; bspc node -z bottom 0 10

# Move Window Border Up on all sides
super + ctrl + shift + Up
	bspc node -z top 0 -10; bspc node -z bottom 0 -10

# Expand window all sides
super + ctrl + alt + shift + Up
	bspc node -z right 10 0; bspc node -z left -10 0; bspc node -z top 0 -10; bspc node -z bottom 0 10

# Shrink window all sides
super + ctrl + alt + shift + Down
	bspc node -z right -10 0; bspc node -z left 10 0; bspc node -z top 0 10; bspc node -z bottom 0 -10

# Increase Volume
XF86AudioRaiseVolume
      wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+; pw-play "$HOME/.local/share/desktop-sounds/focus"

# Decrease Volume
XF86AudioLowerVolume
      wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-; ; pw-play "$HOME/.local/share/desktop-sounds/focus"

# Increase Volume (notify)
super + Insert
      bsp-volume up; pw-play "$HOME/.local/share/desktop-sounds/focus"

# Decrease Volume (notify)
super + Delete
	bsp-volume down; pw-play "$HOME/.local/share/desktop-sounds/focus"

# Mute Volume (notify)
super + Home
	bsp-volume mute

# Increase Screen Brightness
XF86MonBrightnessUp
	xbacklight +10

# Decrease Screen Brightness
XF86MonBrightnessDown
	xbacklight -10

# Take a Screenshot (Region Select)
super + Print
	flameshot gui --path ~/Pictures/Screenshots/

# Take a Fullscreen Screenshot
Print
	flameshot full --path ~/Pictures/Screenshots/

# Master Stack Layout
super + ctrl + 1
      bsp-remove-layout-me; bsp-cache-layout; bsp-layout next --layouts tall,rtall; polybar-msg action "#bspwm.hook.1"; notify-send -e -u low -t 2000 "Master Layout"

# Wide Layout
super + ctrl + 2
      bsp-remove-layout-me; bsp-cache-layout; bsp-layout next --layouts wide,rwide; polybar-msg action "#bspwm.hook.1"; notify-send -e -u low -t 2000 "Master H Layout"

# Master Node Increase / Deck Cycle
super + equal
      bsp-master-node-increase; bsp-layout deck-cycle

# Master Node Decrease
super + shift + equal
      bsp-master-node-decrease

# Master Node Position Cycle
super + shift + alt + equal
      bsp-move-master; polybar-msg action "#bspwm.hook.1"

# Monocle Layout
super + ctrl + 4
      bsp-remove-layout; bsp-cache-layout; bsp-layout set monocle; polybar-msg action "#bspwm.hook.1"; notify-send -e -u low -t 2000 "Monocle Layout"

# Center Master Layout
super + ctrl + 3
	bsp-remove-layout-me; bsp-cache-layout; bsp-layout next --layouts cmaster,rcmaster; polybar-msg action "#bspwm.hook.1"; notify-send -e -u low -t 2000 "Center Master Layout"

# Grid Layout
super + ctrl + 5
      bsp-remove-layout-me; bsp-cache-layout; bsp-layout next --layouts grid,rgrid; polybar-msg action "#bspwm.hook.1"; notify-send -e -u low -t 2000 "Grid Layout"

# Even Layout
super + ctrl + 6
      bsp-remove-layout; bsp-cache-layout; bsp-layout set even; polybar-msg action "#bspwm.hook.1"; notify-send -e -u low -t 2000 "Even Layout"

# Deck Layout
super + ctrl + 7
	bsp-remove-layout; bsp-cache-layout; bsp-layout set deck; polybar-msg action "#bspwm.hook.1"; notify-send -e -u low -t 2000 "Deck Layout"

# Columns/Rows Layout
super + ctrl + 8
	bsp-remove-layout-me; bsp-cache-layout; bsp-layout next --layouts col,row; polybar-msg action "#bspwm.hook.1"; notify-send -e -u low -t 2000 "Columns/Rows Layout"

# Double Stack Layout
super + ctrl + 9
	bsp-remove-layout-me; bsp-cache-layout; bsp-layout next --layouts dmaster,rdmaster; polybar-msg action "#bspwm.hook.1"; notify-send -e -u low -t 2000 "Double Stack Layout"

# H Double Stack Layout
super + ctrl + 0
	bsp-remove-layout-me; bsp-cache-layout; bsp-layout next --layouts hdmaster,rhdmaster; polybar-msg action "#bspwm.hook.1"; notify-send -e -u low -t 2000 "H Double Stack Layout"

# Master Stack Layout (OneShot)
