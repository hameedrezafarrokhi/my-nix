    bspc node --presel-dir \~east -i

# Spawn Empty Point Left
super + alt + shift + Left
    bspc node --presel-dir \~west -i

# Remove All Empty Points
super + shift + a
    bsp-empty-remove

# Insert Focused Window in Empty Point
super + a
    bspc node $(bspc query -N -n focused) -n $(bspc query -N -n .leaf.\!window)

# Rotate -90 Degree
super + alt + minus
    bspc node @parent -R -90

# Rotate +90 Degree
super + alt + equal
    bspc node @parent -R 90

