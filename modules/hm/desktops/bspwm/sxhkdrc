# Launch Rofi Application Menu
super + space
   	rofi -show drun -modi drun -line-padding 4 -hide-scrollbar -show-icons -theme /home/hrf/nixos/modules/hm/desktops/awesome/awesome/rofi/config.rasi

# Set Window State: Floating Mode
super + f
	bspc node -t ~floating

# Set Window State: Fullscreen Mode
super + Return
	bsp-full-screen

# Cycle to next window (like next tab)
alt + Tab
      bspc node -f next.local.window

# Cycle to previous window (like previous tab)
alt + shift + Tab
      bspc node -f prev.local.window

# Shift to next window
super + Tab
      bspc node -s next.local.window

# Shift to previous window
super + shift + Tab
      bspc node -s prev.local.window

# Skippy-xd Expo
super + ctrl + Tab
      skippy-xd --expose

# Skippy-xd Pager
super + ctrl + shift + Tab
      skippy-xd --paging

# Skippy toggle
super + shift + p
      bsp-skippy; notify-send "Skippy"

# Reload sxhkd (Hotkey Daemon)
super + Escape
	pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'

# Reload bspwm (Window Manager)
alt + shift + r
	bspc wm -r; notify-send 'bspwm' 'Restarted'

# Quit bspwm (Exit Window Manager)
alt + shift + e
	bspc quit

# Close Focused Window
super + c
	bspc node -c

# Change Focus to Left Window
super + Left
	bspc node -f west

# Change Focus to Window Below
super + Down
	bspc node -f south

# Change Focus to Window Above
super + Up
	bspc node -f north

# Change Focus to Right Window
super + Right
	bspc node -f east

# Swap Focused Window with Left Window
super + shift + Left
	bspc node -s west

# Swap Focused Window with Window Below
super + shift + Down
	bspc node -s south

# Swap Focused Window with Window Above
super + shift + Up
	bspc node -s north

# Swap Focused Window with Right Window
super + shift + Right
	bspc node -s east

# Manual Window Swap
super + shift + q
      bsp-manual-window-swap

# Manual Window Swap (Mouse)
super + shift + button1
      bsp-manual-window-swap

# Manual Window Send
super + alt + q
      bsp-manual-window-send

# Manual Window Send (Mouse)
super + shift + button3
      bsp-manual-window-send

# Switch to Workspace 1-12
super + {1-9,0}
	bspc desktop --focus ^{1-9,10}

# Move Focused Window to Workspace 1-10
super + shift + {1-9,0}
	bspc node --to-desktop ^{1-9,10}

# Move Focused Window to Workspace 1-10 AND Follow
super + shift + ctrl + {1-9,0}
      bsp-send-follow {1-9,10}

# Move Focused Desktop to Desktop 1-10
super + shift + alt + {1-9,0}
	bspc node @/ -d ^{1-9,10}

# Move Focused Desktop to Desktop 1-10 AND Follow
super + shift + ctrl + alt + {1-9,0}
      bspc node @/ -d ^{1-9,10} --follow

# Swap Focused Desktop with 1-10
super + alt + e; {1-9,0}
      bspc desktop focused --swap {1-9,10}

# Swap Focused Desktop Windows with 1-10
super + shift + e; {1-9,0}
      bsp-desktop-switch {1-9,10}

# Swap Focused Desktop Windows with 1-10 AND Follow
super + alt + shift + e; {1-9,0}
      bsp-desktop-switch-follow {1-9,10}

# Send Focused Desktop to Next or Previous Monitor
super + alt + shift + ctrl + Tab
	bspc desktop focused -m next --follow

# Send Focused Window to Next or Previous Monitor
super + alt + shift + Tab
	bspc node focused -m next --follow

# Expand window width right
super + ctrl + Right
	bspc node -z right 40 0

# Expand window width left
super + ctrl + Left
	bspc node -z left -40 0

# Shrink window width right
super + ctrl + alt + Right
	bspc node -z left 40 0

# Shrink window width left
super + ctrl + alt + Left
	bspc node -z right -40 0

# Expand window height up
super + ctrl + Up
	bspc node -z top 0 -40

# Expand window height down
super + ctrl + Down
	bspc node -z bottom 0 40

# Shrink window height up
super + ctrl + alt + Up
	bspc node -z bottom 0 -40

# Shrink window height down
super + ctrl + alt + Down
	bspc node -z top 0 40

# Move Window Border to Right on all sides
super + ctrl + shift + Right
	bspc node -z right 40 0; bspc node -z left 40 0

# Move Window Border to Left on all sides
super + ctrl + shift + Left
	bspc node -z right -40 0; bspc node -z left -40 0

# Move Window Border Down on all sides
super + ctrl + shift + Down
	bspc node -z top 0 40; bspc node -z bottom 0 40

# Move Window Border Up on all sides
super + ctrl + shift + Up
	bspc node -z top 0 -40; bspc node -z bottom 0 -40

# Expand window all sides
super + ctrl + alt + shift + Up
	bspc node -z right 40 0; bspc node -z left -40 0; bspc node -z top 0 -40; bspc node -z bottom 0 40

# Shrink window all sides
super + ctrl + alt + shift + Down
	bspc node -z right -40 0; bspc node -z left 40 0; bspc node -z top 0 40; bspc node -z bottom 0 -40

# Increase Volume
XF86AudioRaiseVolume
      wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+

# Decrease Volume
XF86AudioLowerVolume
      wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-

# Increase Volume (notify)
super + Insert
      bsp-volume up

# Decrease Volume (notify)
super + Delete
	bsp-volume down

# Mute Volume (notify)
super + Home
	bsp-volume mute

# Increase Screen Brightness
XF86MonBrightnessUp
	xbacklight +10

# Decrease Screen Brightness
XF86MonBrightnessDown
	xbacklight -10

# Take a Screenshot (Region Select)
super + Print
	flameshot gui --path ~/Pictures/Screenshots/

# Take a Fullscreen Screenshot
Print
	flameshot full --path ~/Pictures/Screenshots/

# Master Stack Layout
super + ctrl + 1
      bsp-cmaster-remove; bsp-culomns-rows-layout-remove; bsp-cache-layout; bsp-layout next --layouts tall,rtall; notify-send "Master-Stack Layout"

# Wide Layout
super + ctrl + 2
      bsp-cmaster-remove; bsp-culomns-rows-layout-remove; bsp-cache-layout; bsp-layout next --layouts wide,rwide; notify-send "Master-Stack Layout (Horizontal)"

# Master Node Increase
super + equal
      bsp-master-node-increase

# Master Node Decrease
super + minus
      bsp-master-node-decrease

# Monocle Layout
super + ctrl + 4
      bsp-cmaster-remove; bsp-culomns-rows-layout-remove; bsp-cache-layout; bsp-layout set monocle; notify-send "Monocle Layout"

# Center Master Layout
super + ctrl + 3
	bsp-cmaster-remove; bsp-layout remove; bsp-layout-ext remove; bsp-culomns-rows-layout-remove; bsp-cache-layout; bsp-cmaster-layout; notify-send "Center Master Layout"

# Grid Layout
super + ctrl + 5
      bsp-cmaster-remove; bsp-culomns-rows-layout-remove; bsp-cache-layout; bsp-layout next --layouts grid,rgrid; notify-send "Grid Layout"

# Even Layout
super + ctrl + 6
      bsp-cmaster-remove; bsp-culomns-rows-layout-remove; bsp-cache-layout; bsp-layout set even; notify-send "Even Layout"

# Floating Layout
super + ctrl + 7
	bsp-cmaster-remove; bsp-culomns-rows-layout-remove; bsp-cache-layout; bsp-float; notify-send "Floating Layout"

# Columns Layout
super + ctrl + 8
	bsp-cmaster-remove; bsp-culomns-rows-layout-remove; bsp-layout remove; bsp-layout-ext remove; bsp-culomns; notify-send "Vertical Columns Layout"

# Rows Layout
super + ctrl + 9
	bsp-cmaster-remove; bsp-culomns-rows-layout-remove; bsp-layout remove; bsp-layout-ext remove; bsp-rows; notify-send "Horizontal Rows Layout"

# TV Layout
super + ctrl + 0
	bsp-cmaster-remove; bsp-layout remove; bsp-layout-ext remove; bsp-culomns-rows-layout-remove; bsp-cache-layout; bsp-tv-layout; notify-send "TV Layout"

# Reverse TV Layout
super + ctrl + minus
	bsp-cmaster-remove; bsp-layout remove; bsp-layout-ext remove; bsp-culomns-rows-layout-remove; bsp-cache-layout; bsp-rtv-layout; notify-send "Reverese TV Layout"

# Master Stack Layout (OneShot)
super + alt + 1
      bsp-cmaster-remove; bsp-culomns-rows-layout-remove; bsp-layout once tall; notify-send "(one-shot) Master-Stack Layout"

# Reverse Master Stack Layout (OneShot)
super + ctrl + alt + 1
      bsp-cmaster-remove; bsp-culomns-rows-layout-remove; bsp-layout once rtall; notify-send "(one-shot) Master-Stack Layout"

# Master Stack Layout (Horizontal) (OneShot)
super + alt + 2
      bsp-cmaster-remove; bsp-culomns-rows-layout-remove; bsp-layout once wide; notify-send "(one-shot) Master-Stack Layout (Horizontal)"

# Reverse Master Stack Layout (Horizontal) (OneShot)
super + ctrl + alt + 2
      bsp-cmaster-remove; bsp-culomns-rows-layout-remove; bsp-layout once rwide; notify-send "(one-shot) Master-Stack Layout (Horizontal)"

# Center Master Layout (OneShot)
super + alt + 3
	bsp-cmaster-remove; bsp-layout remove; bsp-layout-ext remove; bsp-culomns-rows-layout-remove; bsp-cache-layout; bsp-cmaster-oneshot; notify-send "Center Master Layout (OneShot)"

# Center Master Layout (Jank Version)
super + ctrl + alt + 3
	bsp-cmaster-remove; bsp-layout remove; bsp-layout-ext remove; bsp-culomns-rows-layout-remove; bsp-cache-layout; bsp-ctall-layout; notify-send "Center Master Layout (Jank Version)"

# Monocle Layout
super + alt + 4
      bsp-cmaster-remove; bsp-culomns-rows-layout-remove; bsp-layout set tiled; notify-send "Tile Layout"

# Grid Layout (OneShot)
super + alt + 5
      bsp-cmaster-remove; bsp-culomns-rows-layout-remove; bsp-layout once grid; notify-send "(one-shot) Grid Layout"

# Reverese Grid Layout (OneShot)
super + ctrl + alt + 5
      bsp-cmaster-remove; bsp-culomns-rows-layout-remove; bsp-layout once rgrid; notify-send "(one-shot) Grid Layout (Reverse)"

# Even Layout (OneShot)
super + alt + 6
      bsp-cmaster-remove; bsp-culomns-rows-layout-remove; bsp-layout once even; notify-send "(one-shot) Even Layout"

# Resize All Windows Equally Manually (OneShot)
super + ctrl + alt + 6
	bsp-cmaster-remove; bsp-culomns-rows-layout-remove; bsp-cache-layout; bspc query -N -d | xargs -I % bspc node % -B; notify-send "Equal Size Windows"

# Vertical Columns Layout (OneShot)
super + alt + 8
	bsp-cmaster-remove; bsp-layout remove; bsp-layout-ext remove; bsp-culomns-rows-layout-remove; bsp-vertical-layout-oneshot; notify-send "Vertical Columns Layout (OneShot)"

# Horizontal Rows Layout (OneShot)
super + alt + 9
	bsp-cmaster-remove; bsp-layout remove; bsp-layout-ext remove; bsp-culomns-rows-layout-remove; bsp-horizontal-layout-oneshot; notify-send "Horizontal Rows Layout (OneShot)"

# TV Layout (OneShot)
super + alt + 0
	bsp-cmaster-remove; bsp-layout remove; bsp-layout-ext remove; bsp-culomns-rows-layout-remove; bsp-cache-layout; bsp-cmaster-oneshot; bspc node @parent -R -90; notify-send "TV Layout (OneShot)"

# Reverse TV Layout (OneShot)
super + ctrl + alt + 0
	bsp-cmaster-remove; bsp-layout remove; bsp-layout-ext remove; bsp-culomns-rows-layout-remove; bsp-cache-layout; bsp-cmaster-oneshot; bspc node @parent -R 90; notify-send "TV Layout (OneShot)"

# Remove Current Layout and Restore Original Layout
super + ctrl + BackSpace
	bsp-cmaster-remove; bsp-layout remove; bsp-layout-ext remove; bsp-culomns-rows-layout-remove; bsp-restore-cached-layout; notify-send "Layout Restored"

# Remove Current Layout
super + BackSpace
	bsp-cmaster-remove; bsp-layout remove; bsp-layout-ext remove; bsp-culomns-rows-layout-remove; notify-send "Layout Removed"

# Reload Current Layout
super + ctrl + grave
	bsp-cmaster-remove; bsp-culomns-rows-layout-remove; bsp-layout reload; notify-send "Reloaded Layouts"

# Floating Layout
super + shift + f
	bsp-float

